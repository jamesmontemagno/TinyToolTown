---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const toolThemes = [
  'None (site default)',
  'terminal',
  'neon',
  'minimal',
  'pastel',
  'matrix',
  'sunset',
  'ocean',
  'forest',
  'candy',
  'synthwave',
  'newspaper',
  'retro',
];

const issueBaseUrl = 'https://github.com/shanselman/TinyToolTown/issues/new?template=submit-tool.yml';
---

<BaseLayout title="Submit a Tool ‚Äî Tiny Tool Town üèòÔ∏è" description="Add your tiny tool to the town! Just fill out a quick GitHub Issue.">
  <Header />

  <main id="main" class="container">
    <section class="submit-page">
      <h1>Submit Your Tool ‚ú®</h1>
      <p class="subtitle">Got a tiny tool the world needs to see? Add it to the town!</p>

      <div class="methods">
        <div class="method-card primary">
          <div class="method-header">
            <span class="method-icon">üìù</span>
            <h2>Submit via GitHub Issue</h2>
          </div>
          <p>Just fill out a quick form ‚Äî no forking, no PRs, no fuss. We'll take care of the rest!</p>

          <div class="steps">
            <div class="step">
              <span class="step-num">1</span>
              <div>
                <strong>Click the button below</strong>
                <p>It opens a pre-filled GitHub Issue template</p>
              </div>
            </div>
            <div class="step">
              <span class="step-num">2</span>
              <div>
                <strong>Fill in your tool's details</strong>
                <p>Name, description, GitHub repo URL, and a few tags</p>
              </div>
            </div>
            <div class="step">
              <span class="step-num">3</span>
              <div>
                <strong>We review and add it! üèòÔ∏è</strong>
                <p>Your tool shows up on the site with a screenshot pulled from your README</p>
              </div>
            </div>
          </div>

          <div class="theme-preview-picker" aria-label="Optional page theme picker">
            <label for="issue-theme-select">Page theme preview (optional)</label>
            <div class="theme-picker-row">
              <select id="issue-theme-select" name="theme">
                {toolThemes.map((theme) => (
                  <option value={theme}>{theme}</option>
                ))}
              </select>
            </div>

            <div class="theme-preview" id="theme-preview-card">
              <p class="theme-preview-label">Live preview</p>
              <div class="theme-preview-inner">
                <h3>Tiny Tool Page</h3>
                <p>See how your tool page colors will look with this theme.</p>
                <div class="theme-preview-tags">
                  <span class="theme-preview-tag">cli</span>
                  <span class="theme-preview-tag">fun</span>
                </div>
                <button type="button" class="theme-preview-btn">View on GitHub</button>
              </div>
            </div>
          </div>

          <a href={issueBaseUrl} class="btn btn-primary" id="submit-issue-link" target="_blank" rel="noopener">
            Submit Your Tool ‚Üí
          </a>
        </div>
      </div>

      <!-- TinyToolSubmitter CLI -->
      <div class="method-card cli-card">
        <div class="method-header">
          <span class="method-icon">ü§ñ</span>
          <h2>Submit with TinyToolSubmitter CLI</h2>
        </div>
        <p>Use the <a href="https://github.com/jamesmontemagno/TinyToolSubmitter" target="_blank" rel="noopener">TinyToolSubmitter</a> CLI to auto-generate your submission using GitHub Copilot! Install via npm (<a href="https://www.npmjs.com/package/tiny-tool-submitter" target="_blank" rel="noopener">tiny-tool-submitter</a>) or use the .NET tool.</p>

        <div class="cli-segmented" aria-label="TinyToolSubmitter install method">
          <input type="radio" name="cli-mode" id="cli-mode-npm" checked />
          <label for="cli-mode-npm">npm</label>

          <input type="radio" name="cli-mode" id="cli-mode-dotnet" />
          <label for="cli-mode-dotnet">.NET</label>

          <div class="cli-commands">
            <div class="cli-option cli-panel-npm" id="cli-panel-npm">
              <strong>Install and run with npm:</strong>
              <pre><code>npm i -g tiny-tool-submitter
tiny-tool-submit [path-to-repo]</code></pre>
              <strong>Or run once with npx (no install):</strong>
              <pre><code>npx tiny-tool-submitter [path-to-repo]</code></pre>
              <p class="cli-note cli-note-inline">Requires <a href="https://docs.github.com/en/copilot/github-copilot-in-the-cli" target="_blank" rel="noopener">GitHub Copilot CLI</a> on your PATH and Node.js/npm installed.</p>
            </div>

            <div class="cli-option cli-panel-dotnet" id="cli-panel-dotnet">
              <strong>Install and run with .NET:</strong>
              <pre><code>dotnet tool install --global TinyToolSubmitter
tiny-tool-submit [path-to-repo]</code></pre>
              <strong>Or run directly with dnx:</strong>
              <pre><code>dnx TinyToolSubmitter</code></pre>
              <p class="cli-note cli-note-inline">Requires <a href="https://docs.github.com/en/copilot/github-copilot-in-the-cli" target="_blank" rel="noopener">GitHub Copilot CLI</a> on your PATH and .NET 10 SDK installed.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Guidelines -->
      <div class="guidelines">
        <h2>What makes a great Tiny Tool? ü§î</h2>
        <div class="guideline-grid">
          <div class="guideline">
            <span class="gl-icon">‚úÖ</span>
            <div>
              <strong>Free & Open Source</strong>
              <p>Source code on GitHub, free to use</p>
            </div>
          </div>
          <div class="guideline">
            <span class="gl-icon">‚úÖ</span>
            <div>
              <strong>Tiny & Focused</strong>
              <p>Does one thing and does it well</p>
            </div>
          </div>
          <div class="guideline">
            <span class="gl-icon">‚úÖ</span>
            <div>
              <strong>Delightful</strong>
              <p>Makes you smile, even if it's silly</p>
            </div>
          </div>
          <div class="guideline">
            <span class="gl-icon">‚úÖ</span>
            <div>
              <strong>Made with Love</strong>
              <p>Built because you wanted it to exist</p>
            </div>
          </div>
          <div class="guideline">
            <span class="gl-icon">‚ùå</span>
            <div>
              <strong>Not enterprise SaaS</strong>
              <p>No paid products or freemium traps</p>
            </div>
          </div>
          <div class="guideline">
            <span class="gl-icon">‚ùå</span>
            <div>
              <strong>Not abandoned</strong>
              <p>Should work and have recent activity</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .submit-page {
    padding: 2.5rem 0 3rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .submit-page h1 {
    font-size: 2.25rem;
    font-weight: 900;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    margin-bottom: 2.5rem;
  }

  .methods {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .method-card {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 2rem;
  }

  .method-card.primary {
    border-color: rgba(255, 137, 6, 0.3);
  }

  .method-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .method-icon { font-size: 1.5rem; }

  .method-header h2 {
    font-size: 1.25rem;
    font-weight: 700;
  }

  .method-card > p {
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
  }

  .steps {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .step {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .step-num {
    width: 28px;
    height: 28px;
    background: var(--color-primary);
    color: var(--color-bg);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.85rem;
    flex-shrink: 0;
  }

  .step p {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-top: 0.2rem;
  }

  .theme-preview-picker {
    margin-bottom: 1.25rem;
  }

  .theme-preview-picker label {
    display: block;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .theme-picker-row {
    margin-bottom: 0.75rem;
  }

  .theme-picker-row select {
    width: 100%;
    max-width: 260px;
    padding: 0.5rem 0.7rem;
    background: var(--color-bg-card);
    color: var(--color-text);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    font-size: 0.9rem;
  }

  .theme-preview {
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    background: var(--color-bg-card);
    padding: 0.75rem;
    max-width: 420px;
  }

  .theme-preview-label {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.04em;
    margin-bottom: 0.5rem;
  }

  .theme-preview-inner {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: calc(var(--radius) - 2px);
    padding: 0.75rem;
  }

  .theme-preview-inner h3 {
    font-size: 1rem;
    margin-bottom: 0.25rem;
    color: var(--color-text);
  }

  .theme-preview-inner p {
    font-size: 0.82rem;
    color: var(--color-text-muted);
    margin-bottom: 0.6rem;
  }

  .theme-preview-tags {
    display: flex;
    gap: 0.4rem;
    margin-bottom: 0.6rem;
  }

  .theme-preview-tag {
    font-size: 0.72rem;
    padding: 0.2rem 0.55rem;
    border-radius: 999px;
    background: var(--color-tag-bg);
    color: var(--color-tag-text);
    border: 1px solid var(--color-border);
  }

  .theme-preview-btn {
    appearance: none;
    border: none;
    font: inherit;
    font-size: 0.8rem;
    font-weight: 700;
    border-radius: 999px;
    padding: 0.35rem 0.75rem;
    background: var(--color-primary);
    color: var(--color-bg);
  }

  .step code {
    background: rgba(255, 255, 255, 0.1);
    padding: 0.15rem 0.4rem;
    border-radius: 4px;
    font-size: 0.85rem;
  }

  .cli-card {
    margin-top: 1.5rem;
    border-color: rgba(99, 179, 237, 0.3);
  }

  .cli-commands {
    grid-column: 1 / -1;
    margin-bottom: 1rem;
  }

  .cli-segmented {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .cli-segmented input {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .cli-segmented label {
    text-align: center;
    padding: 0.45rem 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    cursor: pointer;
    font-size: 0.9rem;
    font-weight: 600;
    background: var(--color-bg-card);
    color: var(--color-text-muted);
    transition: border-color 0.2s ease, color 0.2s ease, background-color 0.2s ease;
  }

  #cli-mode-npm:checked + label,
  #cli-mode-dotnet:checked + label {
    border-color: var(--color-primary);
    color: var(--color-text);
    background: rgba(255, 137, 6, 0.1);
  }

  .cli-panel-npm,
  .cli-panel-dotnet {
    display: none;
  }

  #cli-mode-npm:checked ~ .cli-commands .cli-panel-npm,
  #cli-mode-dotnet:checked ~ .cli-commands .cli-panel-dotnet {
    display: block;
  }

  .cli-panel-dotnet {
    margin-bottom: 1rem;
  }

  .cli-option strong {
    display: block;
    margin-bottom: 0.4rem;
    font-size: 0.9rem;
  }

  .cli-option pre {
    background: var(--color-bg-hover);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    padding: 0.75rem 1rem;
    overflow-x: auto;
    margin: 0;
  }

  .cli-option code {
    font-size: 0.85rem;
    color: var(--color-text);
  }

  .cli-note {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-top: 0.5rem;
  }

  .cli-note-inline {
    margin-top: 0.85rem;
  }

  .cli-note a {
    color: var(--color-primary);
  }

  .guidelines h2 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .guideline-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 1rem;
  }

  .guideline {
    display: flex;
    gap: 0.75rem;
    align-items: flex-start;
    padding: 1rem;
    background: var(--color-bg-card);
    border-radius: var(--radius);
    border: 1px solid var(--color-border);
  }

  .gl-icon { font-size: 1.25rem; flex-shrink: 0; }

  .guideline strong {
    display: block;
    margin-bottom: 0.15rem;
  }

  .guideline p {
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }
</style>

<script>
  const select = document.getElementById('issue-theme-select');
  const preview = document.getElementById('theme-preview-card');
  const submitLink = document.getElementById('submit-issue-link');
  const issueBaseUrl = 'https://github.com/shanselman/TinyToolTown/issues/new?template=submit-tool.yml';

  function applyThemePreview() {
    if (!(select instanceof HTMLSelectElement) || !(preview instanceof HTMLElement) || !(submitLink instanceof HTMLAnchorElement)) return;

    const selected = select.value;
    const normalized = selected === 'None (site default)' ? '' : selected;

    if (normalized) preview.setAttribute('data-theme', normalized);
    else preview.removeAttribute('data-theme');

    submitLink.href = normalized
      ? `${issueBaseUrl}&theme=${encodeURIComponent(normalized)}`
      : issueBaseUrl;
  }

  applyThemePreview();
  select?.addEventListener('change', applyThemePreview);
</script>
